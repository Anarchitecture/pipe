{
  "name": "anarchitecture/pipe",
  "type": "library",
  "description": "Unary callable helpers to leverage PHP 8.5 pipes",
  "license": "MIT",
  "require": {
    "php": "^8.5"
  },
  "autoload": {
    "files": [
      "src/pipe.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Anarchitecture\\pipe\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.5",
    "friendsofphp/php-cs-fixer": "^3.93"
  },
  "scripts": {
    "analyse": "php -d memory_limit=256M vendor/bin/phpstan analyse -l 10 src tests",
    "test": "phpunit",
    "cs:check": "php -d memory_limit=256M vendor/bin/php-cs-fixer fix --dry-run --diff --ansi",
    "cs:fix": "php -d memory_limit=256M vendor/bin/php-cs-fixer fix --ansi",
    "check": [
      "@analyse",
      "@test",
      "@cs:check"
    ]
  }
}
